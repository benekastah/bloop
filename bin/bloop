#!/usr/bin/env node

var fs = require('fs');
var util = require('util');

var argv = require('optimist')
    .usage('Usage: $0 -c [infile] -o [outfile]')
    .demand(['c'])
    .argv;

var escodegen = require('escodegen');
var esmangle = require('esmangle');

var lex = require('../lexer');
var ast = require('../ast');
var helpers = require('../helpers');
var Compiler = require('../compiler').Compiler;

var infile = argv.c;
var outfile = argv.o;

fs.readFile(infile, 'utf8', function (err, data) {
    if (err) {
        throw err;
    }

    var parser = require('../parser').parser;
    parser.lexer = lex.makeLexer();
    parser.yy = ast;

    var mod = parser.parse(data);
    // console.log(util.inspect(mod, {depth: 100, colors: true}));

    var compiler = new Compiler(mod);
    var context = compiler.typeSystem.context.last();
    for (var prop in context) {
        console.log(prop + ': ' + context[prop]);
    }
    helpers.log(escodegen.generate(compiler.compile()));
});

// vim: ts=4 sts=4 sw=4 et
